<% layout('layout/boilerplate') %>
<!-- ✅ Filters Wrapper -->     
<div id="filters" class="border-bottom shadow-sm">
  <!-- ✅ Filter Strip --> 
  <div class="filters px-4 py-3 d-flex align-items-center overflow-auto">
    
    <!-- ✅ Single Filter -->
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <span>Trending</span>
    </div>
    <div class="filter">
      <i class="fa-solid fa-door-closed"></i>
      <span>Rooms</span>
    </div>
    <div class="filter">
      <i class="fa-solid fa-city"></i>
      <span>Iconic Cities</span>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain-sun"></i>
      <span>Mountain</span>
    </div>
    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      <span>Beach</span>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tree"></i>
      <span>Forest</span>
    </div>
    <div class="filter">
      <i class="fa-solid fa-campground"></i>
      <span>Camping</span>
    </div>
    <div class="filter">
      <i class="fa-solid fa-ship"></i>
      <span>Boats</span>
    </div>
    <div class="filter">
      <i class="fa-solid fa-house-chimney"></i>
      <span>Cabins</span>
    </div>
    <div class="tax-toggle d-flex align-items-center ms-auto me-3">
  <label class="form-check-label me-2 fw-semibold" for="taxToggle">Display total after taxes</label>
  <div class="form-check form-switch m-0">
    <input class="form-check-input" type="checkbox" id="taxToggle">
  </div>
</div>

  </div>
</div>


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-3">
  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
        <div class="card shadow-sm">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem; object-fit: cover;">
          
          <div class="card-body">
            <h5 class="card-title fw-bold mb-2"><%= listing.title %></h5>

            <% if (listing.price !== undefined) { %>
              <!-- Dynamic price container -->
              <p class="card-text text-muted base-price" data-base="<%= listing.price %>">
                ₹<%= listing.price.toLocaleString("en-IN") %> <span class="night-label">/night</span>
              </p>
              <!-- GST Info (hidden initially) -->
              <p class="card-text text-success tax-info d-none">Includes 18% GST</p>
            <% } else { %>
              <p class="card-text text-muted">Price not available</p>
            <% } %>

          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>
<script src="/js/filters.js"></script>


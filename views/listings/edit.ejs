<% layout('layout/boilerplate') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-sm-12">
      <h3 class="mb-4 text-center">Edit Listing</h3>

      <!-- ✅ FORM starts -->
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input id="title" name="listing[title]" value="<%= listing.title %>" type="text" required class="form-control"> 
          <div class="valid-feedback">Title looks good</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea id="description" name="listing[description]" required class="form-control" rows="3"><%= listing.description %></textarea>
          <div class="invalid-feedback">Enter a valid description</div>
        </div>
        <!--image shown-->
        <% if (listing.image && listing.image.url) { %>
          <div class="mb-3">
            <label class="form-label d-block">Current Image</label>
             <img 
            src="<%= listing.image.url %>" 
            alt="Current image" 
             width="300" 
             height="200" 
            class="rounded shadow-sm">
            </div>
             <% } %>
        <!-- Image URL --> 
       <div class="mb-3">
       <label for="image" class="form-label">Upload Image</label>
       <input id="image" name="listing[image]" value="<%= listing.image.url %>" type="file" class="form-control">
       <div class="invalid-feedback">Upload a valid image </div>
       </div>


        <div class="row">
          <!-- Price -->
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input id="price" name="listing[price]" value="<%= listing.price %>" type="number" required class="form-control">
            <div class="invalid-feedback">Invalid price</div>
          </div>

          <!-- Country -->
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input id="country" name="listing[country]" value="<%= listing.country %>" type="text" required class="form-control">
            <div class="invalid-feedback">Enter a valid country</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-4">
          <label for="location" class="form-label">Location</label>
          <input id="location" name="listing[location]" value="<%= listing.location %>" type="text" required class="form-control">
          <div class="invalid-feedback">Enter a valid location</div>
        </div>

        <!-- Submit -->
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Update Listing</button>
        </div>
      </form>
      <!-- ✅ FORM ends -->
    </div>
  </div>
</div>

<!-- Optional Bootstrap JS for dismissible alerts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
